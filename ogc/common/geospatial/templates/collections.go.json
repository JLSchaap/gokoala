{{- /*gotype: github.com/PDOK/gokoala/engine.TemplateData*/ -}}
{
  {{ $baseUrl := .Config.BaseURL }}
  "links" : [
    {
      "rel" : "self",
      "type" : "application/json",
      "title" : "This document",
      "href" : "{{ $baseUrl }}/collections?f=json"
    },
    {
      "rel" : "alternate",
      "type" : "text/html",
      "title" : "This document",
      "href" : "{{ $baseUrl }}/collections?f=html"
    }
  ],
  "collections" : [
    {{ if and .Config.OgcAPI.GeoVolumes .Config.OgcAPI.GeoVolumes.Collections }}
    {{ range $index, $coll := .Config.OgcAPI.GeoVolumes.Collections }}
    {{ if $index }},{{ end }}
    {
      "id" : "{{ $coll.ID }}",
      "title" : "{{ $coll.ID }}",
      {{ if and $coll.Metadata $coll.Metadata.Description }}
      "description" : "{{ unmarkdown $coll.Metadata.Description }}",
      {{ end }}
      "collectionType" : "3d-container"
      {{ if and $coll.Metadata $coll.Metadata.Extent }}
      ,
      "extent" : {
        "spatial": {
          "bbox": [ [ {{ $coll.Metadata.Extent.Bbox | join "," }} ] ],
          "crs" : "http://www.opengis.net/def/crs/EPSG/0/{{ trimPrefix "EPSG:" $coll.Metadata.Extent.Srs.EPSG }}"
        }
      }
      {{ end }}
      ,
      "links" : [
        {
          "rel" : "self",
          "type" : "application/json",
          "title" : "Information about the 3D {{ $coll.ID }} collection as JSON",
          "href" : "{{ $baseUrl }}/collections/{{ $coll.ID }}?f=json"
        },
        {
          "rel" : "alternate",
          "type" : "text/html",
          "title" : "Information about the 3D {{ $coll.ID }} collection as HTML",
          "href" : "{{ $baseUrl }}/collections/{{ $coll.ID }}?f=json"
        },
        {
          "rel" : "items",
          "type" : "application/json+3dtiles",
          "title" : "Tileset definition of collection {{ $coll.ID }} according to the OGC 3D Tiles specification",
          "href" : "{{ $baseUrl }}/collections/{{ $coll.ID }}/3dtiles?f=json"
        }
      ],
      "content" : [
        {
          "rel" : "original",
          "type" : "application/json+3dtiles",
          "title" : "Tileset definition of collection {{ $coll.ID }} according to the OGC 3D Tiles specification",
          "href" : "{{ $baseUrl }}/collections/{{ $coll.ID }}/3dtiles?f=json",
          "collectionType": "3d-container"
        }
      ]
    }{{ if $index }},{{ end }}
    {{end}}
    {{end}}

    {{/* start placeholder for tiles collections */}}
    {{ if and .Config.OgcAPI.Tiles .Config.OgcAPI.Tiles.Collections }}
    ,
    {{ range $index, $coll := .Config.OgcAPI.Tiles.Collections }}
    {
      "id" : "{{ $coll.ID }}",
      "title" : "{{ $coll.ID }}"
      {{ if and $coll.Metadata $coll.Metadata.Description }}
      ,
      "description" : "{{ unmarkdown $coll.Metadata.Description }}"
      {{ end }}
      {{ if and $coll.Metadata $coll.Metadata.Extent }}
      ,
      "extent" : {
        "spatial": {
          "bbox": [ [ {{ $coll.Metadata.Extent.Bbox | join "," }} ] ],
          "crs" : "http://www.opengis.net/def/crs/EPSG/0/{{ trimPrefix "EPSG:" $coll.Metadata.Extent.Srs.EPSG }}"
        }
      }
      {{ end }}
      ,
      "links" : [
        {
          "rel" : "self",
          "type" : "application/json",
          "title" : "This document",
          "href" : "{{ $baseUrl }}/collections/{{ $coll.ID }}?f=json"
        }
      ]
    }{{ if $index }},{{ end }}
    {{ end }}
    {{ end }}
    {{/* end placeholder for tiles collections */}}

    {{/* start placeholder for features collections */}}
    {{ if and .Config.OgcAPI.Features .Config.OgcAPI.Features.Collections }}
    {{ range $index, $coll := .Config.OgcAPI.Features.Collections }}
    {
      "id" : "{{ $coll.ID }}",
      "title" : "{{ $coll.ID }}"
      {{ if and $coll.Metadata $coll.Metadata.Description }}
      ,
      "description" : "{{ unmarkdown $coll.Metadata.Description }}"
      {{ end }}
      {{ if and $coll.Metadata $coll.Metadata.Extent }}
      ,
      "extent" : {
        "spatial": {
          "bbox": [ [ {{ $coll.Metadata.Extent.Bbox | join "," }} ] ],
          "crs" : "http://www.opengis.net/def/crs/EPSG/0/{{ trimPrefix "EPSG:" $coll.Metadata.Extent.Srs.EPSG }}"
        }
      }
      {{ end }}
      ,
      "links" : [
        {
          "rel" : "self",
          "type" : "application/json",
          "title" : "This document",
          "href" : "{{ $baseUrl }}/collections/{{ $coll.ID }}?f=json"
        }
      ]
    }{{ if $index }},{{ end }}
    {{ end }}
    {{ end }}
    {{/* end placeholder for features collections */}}

    {{/* start placeholder for maps collections */}}
    {{ if and .Config.OgcAPI.Maps .Config.OgcAPI.Maps.Collections }}
    ,
    {{ range $index, $coll := .Config.OgcAPI.Maps.Collections }}
    {
      "id" : "{{ $coll.ID }}",
      "title" : "{{ $coll.ID }}"
      {{ if and $coll.Metadata $coll.Metadata.Description }}
      ,
      "description" : "{{ unmarkdown $coll.Metadata.Description }}"
      {{ end }}
      {{ if and $coll.Metadata $coll.Metadata.Extent }}
      ,
      "extent" : {
        "spatial": {
          "bbox": [ [ {{ $coll.Metadata.Extent.Bbox | join "," }} ] ],
          "crs" : "http://www.opengis.net/def/crs/EPSG/0/{{ trimPrefix "EPSG:" $coll.Metadata.Extent.Srs.EPSG }}"
        }
      }
      {{ end }}
      ,
      "links" : [
        {
          "rel" : "self",
          "type" : "application/json",
          "title" : "This document",
          "href" : "{{ $baseUrl }}/collections/{{ $coll.ID }}?f=json"
        }
      ]
    }{{ if $index }},{{ end }}
    {{ end }}
    {{ end }}
    {{/* end placeholder for maps collections */}}
  ]
}
